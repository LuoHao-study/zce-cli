{
  "name": "zce-cli",
  "version": "0.3.0-nightly.20190505",
  "description": "A CLI tool for my personal productivity.",
  "keywords": [
    "cli",
    "zce"
  ],
  "homepage": "https://github.com/zce/zce-cli#readme",
  "bugs": {
    "url": "https://github.com/zce/zce-cli/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/zce/zce-cli.git"
  },
  "license": "MIT",
  "author": {
    "name": "zce",
    "email": "w@zce.me",
    "url": "https://zce.me"
  },
  "files": [
    "bin",
    "lib"
  ],
  "main": "lib/index.js",
  "bin": "bin/zce.js",
  "directories": {
    "lib": "lib",
    "bin": "bin",
    "doc": "doc",
    "test": "test"
  },
  "scripts": {
    "format": "prettier --write \"**/*.ts\"",
    "clean": "rimraf lib",
    "lint": "eslint \"**/*.ts\"",
    "compile": "tsc -p .",
    "build": "run-s clean format lint compile",
    "test": "jest",
    "coverage": "jest --coverage",
    "commit": "git-cz",
    "release": "standard-version"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "lint-staged": {
    "*.md": "prettier --write",
    "*.{js,ts,json}": [
      "prettier --write",
      "eslint --fix"
    ]
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "prettier": {
    "arrowParens": "avoid",
    "endOfLine": "lf",
    "printWidth": 100,
    "semi": false,
    "singleQuote": true,
    "trailingComma": "none"
  },
  "eslintConfig": {
    "env": {
      "es2020": true,
      "node": true,
      "jest": true
    },
    "extends": [
      "plugin:@typescript-eslint/recommended",
      "standard"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "ecmaVersion": 11,
      "sourceType": "module",
      "project": "tsconfig.json"
    },
    "plugins": [
      "@typescript-eslint"
    ],
    "rules": {}
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.ts"
    ],
    "preset": "ts-jest",
    "testEnvironment": "node"
  },
  "dependencies": {
    "chalk": "^4.1.0",
    "execa": "^4.0.2",
    "got": "^11.3.0",
    "lodash": "^4.17.15",
    "minimist": "^1.2.5",
    "minimist-options": "^4.1.0",
    "mkdirp": "^1.0.4",
    "ora": "^4.0.4",
    "redent": "^3.0.0",
    "semver": "^7.3.2",
    "tildify": "^2.0.0",
    "untildify": "^4.0.0"
  },
  "devDependencies": {
    "@types/execa": "^2.0.0",
    "@types/got": "^9.6.11",
    "@types/jest": "^26.0.0",
    "@types/lodash": "^4.14.156",
    "@types/minimist": "^1.2.0",
    "@types/mkdirp": "^1.0.1",
    "@types/node": "^14.0.13",
    "@types/rimraf": "^3.0.0",
    "@types/semver": "^7.2.0",
    "@typescript-eslint/eslint-plugin": "^3.4.0",
    "@typescript-eslint/parser": "^3.4.0",
    "eslint": "^7.3.1",
    "eslint-config-standard": "^14.1.1",
    "eslint-plugin-import": "^2.21.2",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "jest": "^26.0.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.0.5",
    "rimraf": "^3.0.2",
    "ts-jest": "^26.1.1",
    "typescript": "^3.9.5"
  },
  "engines": {
    "node": ">=10"
  }
}

{
  "name": "zce-cli",
  "version": "0.1.0-alpha.8",
  "description": "A scaffolding CLI tool for myself, inspired by vue-cli & yeoman.",
  "keywords": [
    "cli",
    "zce",
    "zce-cli",
    "zce-template"
  ],
  "homepage": "http://cli.zce.me",
  "bugs": {
    "url": "https://github.com/zce/zce-cli/issues"
  },
  "license": "MIT",
  "author": "zce <w@zce.me> (https://zce.me/)",
  "files": [
    "bin",
    "lib"
  ],
  "main": "lib/generate.js",
  "bin": {
    "zce": "bin/zce.js"
  },
  "directories": {
    "lib": "lib",
    "doc": "doc",
    "example": "example",
    "test": "test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/zce/zce-cli.git"
  },
  "scripts": {
    "cover": "nyc npm run test",
    "lint": "standard --fix",
    "test": "npm run lint && npm run test:unit && npm run test:e2e",
    "test:e2e": "cross-env NODE_ENV=testing mocha test/e2e/*.test.js",
    "test:unit": "cross-env NODE_ENV=testing mocha test/unit/*.test.js"
  },
  "dependencies": {
    "camelcase": "^4.1.0",
    "chalk": "^2.1.0",
    "commander": "^2.11.0",
    "download": "^6.2.5",
    "got": "^8.0.0",
    "handlebars": "^4.0.10",
    "inquirer": "^4.0.0",
    "metalsmith": "^2.3.0",
    "minimatch": "^3.0.4",
    "ora": "^1.3.0",
    "rc": "^1.2.1",
    "rimraf": "^2.6.1",
    "semver": "^5.4.1",
    "validate-npm-package-name": "^3.0.0"
  },
  "devDependencies": {
    "codecov": "^3.0.0",
    "cross-env": "^5.0.5",
    "mocha": "^4.0.1",
    "nyc": "^11.1.0",
    "standard": "^10.0.3"
  },
  "engines": {
    "node": ">=6"
  },
  "preferGlobal": true,
  "standard": {
    "globals": [
      "describe",
      "before",
      "beforeEach",
      "after",
      "afterEach",
      "it"
    ]
  }
}

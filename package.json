{
  "name": "zce-cli",
  "version": "0.1.0-alpha.1",
  "description": "A scaffolding CLI tool for my productivity, inspired by vue-cli &amp; yeoman.",
  "keywords": [
    "cli",
    "zce"
  ],
  "homepage": "https://github.com/zce/zce-cli#readme",
  "bugs": {
    "url": "https://github.com/zce/zce-cli/issues"
  },
  "license": "MIT",
  "author": "zce <w@zce.me> (https://zce.me/)",
  "files": [
    "bin",
    "lib"
  ],
  "main": "lib/index.js",
  "bin": {
    "zce": "bin/zce.js"
  },
  "directories": {
    "lib": "lib",
    "doc": "doc",
    "test": "test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/zce/zce-cli.git"
  },
  "scripts": {
    "lint": "standard --fix",
    "test:unit": "ava test/unit/** --verbose",
    "test:e2e": "ava test/e2e/** --verbose",
    "test": "npm run lint && npm run test:unit && npm run test:e2e",
    "coverage": "nyc npm test",
    "coverage:report": "nyc report --reporter=html",
    "precommit": "npm test"
  },
  "dependencies": {
    "boxen": "^1.3.0",
    "chalk": "^2.4.0",
    "commander": "^2.15.1",
    "download": "^6.2.5",
    "fullname": "^3.3.0",
    "inquirer": "^5.2.0",
    "lodash": "^4.17.5",
    "log-symbols": "^2.2.0",
    "metalsmith": "^2.3.0",
    "minimatch": "^3.0.4",
    "ora": "^2.0.0",
    "rc": "^1.2.6",
    "rimraf": "^2.6.2",
    "semver": "^5.5.0",
    "username": "^3.0.0"
  },
  "devDependencies": {
    "ava": "^1.0.0-beta.4",
    "mkdirp": "^0.5.1",
    "nyc": "^11.7.1",
    "standard": "^11.0.1"
  },
  "engines": {
    "node": ">=8"
  },
  "preferGlobal": true
}

{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "baseUrl": "src",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "paths": {
      "@*": ["src/*"]
    },
    "strict": true,
    "target": "es2017"
  },
  "exclude": ["src/**/*.test.ts"],
  "include": ["src/**/*.ts"]
}
